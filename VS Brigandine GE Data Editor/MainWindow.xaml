<Window x:Class="VS_Brigandine_GE_Data_Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VS_Brigandine_GE_Data_Editor.Data_Type_View_Models"
        xmlns:views="clr-namespace:VS_Brigandine_GE_Data_Editor.Data_Type_Views"
        mc:Ignorable="d"
        Title="Brigandine Grand Edition Data Editor" Height="450" Width="800">
    <Grid d:DataContext="{d:DesignInstance d:Type=local:MainWindowViewModel, IsDesignTimeCreatable=True}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <views:AttackDataView DataContext="{Binding Path=AttackDataViewModel}" Grid.Row="0" />

             <StackPanel Orientation="Horizontal" Grid.Row="1"> 
                <Button Name="OpenFile" Content="Open File" Command="{Binding Path=OpenFileCommand}"/>
                <Button Name="LoadAndReadFile" Content="Load And Read File" Command="{Binding Path=LoadAndReadFileCommand}"/>
             </StackPanel> 
        <!-- </StackPanel> -->
        <!-- </Grid> -->
    </Grid>
</Window>
